#include <stdio.h>

int main() {
  int x,y, n;


  printf("masukan n :");
  scanf("%d", &n);

  for (x = n; x >= 1; x--)
   {

    for (y = 1; y <= x; y++) 
	{
      printf("%d", x);
    }
    
    printf("\n");
   }
   
  printf("\n\n");

 
  for (x = 1; x <= n; x++)
     {
    
    for (y = 1; y <= x; y++)
	 {
      printf("%d", y);
     }
    printf("\n");
 	 }
}
